<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.example.calzada.harol.miprimeraaplicacionandroid.MainActivity"
    android:background="@drawable/back">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bienvenido"
        android:id="@+id/bienvenido"
        android:textSize="@dimen/abc_action_button_min_width_material"
        android:textColor="#fefefe"
        android:textColorHighlight="#fefbfb"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/entrar"
        android:id="@+id/entrar"
        android:textColor="#ffffff"
        android:background="@android:color/transparent"
        android:backgroundTintMode="src_in"
        android:drawableTint="#ffffff"
        android:allowUndo="false"
        android:backgroundTint="#ffffff"
        android:singleLine="true"
        android:layout_below="@+id/bienvenido"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
